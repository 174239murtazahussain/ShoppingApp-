<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".BuyerSignUp">



    <EditText
        android:id="@+id/bsuname"
        android:layout_width="275dp"
        android:layout_height="54dp"

        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="buyername"
        android:padding="16dp"


        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <EditText
        android:id="@+id/bsuemail"
        android:layout_width="275dp"
        android:layout_height="54dp"

        android:layout_marginTop="12dp"


        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="buyeremail"
        android:padding="16dp"

        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsuname" />

    <EditText
        android:id="@+id/bsupass"
        android:layout_width="275dp"
        android:layout_height="54dp"

        android:layout_marginTop="12dp"

        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="buyerpassword"
        android:padding="16dp"

        android:textSize="22sp"
        android:inputType="textPassword"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsuemail" />

    <EditText
        android:id="@+id/bsuconfirmpass"
        android:layout_width="275dp"
        android:layout_height="54dp"

        android:layout_marginTop="12dp"

        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="buyerconfirmpass"

        android:inputType="textPassword"
        android:padding="16dp"

        android:textSize="22sp"

        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsupass" />

    <Button
        android:id="@+id/buyerdob"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="12dp"
        android:text="buyerDOB"
        android:textAllCaps="false"
        android:textSize="22sp"

        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsuconfirmpass" />

    <TextView
        android:id="@+id/buyergender"
        android:layout_width="92dp"
        android:layout_height="53dp"

        android:layout_marginTop="16dp"


        android:text="buyergender"
        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyerdob" />

    <RadioGroup
        android:id="@+id/gendergroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/buyergender"
        app:layout_constraintTop_toBottomOf="@id/buyerdob">

        <RadioButton
            android:id="@+id/buyerf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:text="buyerfemale"


            android:textSize="15sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toEndOf="@+id/buyergender"
            app:layout_constraintTop_toBottomOf="@+id/buyerdob" />

        <RadioButton
            android:id="@+id/buyerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:text="buyermale"

            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.262"
            app:layout_constraintStart_toEndOf="@+id/buyerf"
            app:layout_constraintTop_toBottomOf="@+id/buyerdob" />

        <RadioButton
            android:id="@+id/buyero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:text="buyerother"

            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyerf" />


    </RadioGroup>

    <Button
        android:id="@+id/buyersu"
        android:layout_width="154dp"
        android:layout_height="49dp"

        android:layout_marginBottom="104dp"
        android:background="@drawable/round_btn"

        android:text="buyerregister"


        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>